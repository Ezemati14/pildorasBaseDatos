        <ListBox Name="todosPedidos" Margin="417,61,49,0" Height="202" VerticalAlignment="Top"/>
        <Button  Content="Eliminar" HorizontalAlignment="Left" Margin="417,286,0,0" VerticalAlignment="Top" Height="32" Width="113" Click="Button_Click"/>
