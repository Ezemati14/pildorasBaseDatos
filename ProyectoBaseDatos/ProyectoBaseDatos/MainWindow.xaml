        <TextBox Name="insertaCliente" HorizontalAlignment="Left" Margin="15,332,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="30"/>
        <Button Content="ActualizarCliente" HorizontalAlignment="Left" Margin="162,378,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.007,-0.306" Height="26" Width="114" Click="Button_Click_3"/>

    </Grid>
</Window>
