        xmlns:local="clr-namespace:ProyectoBaseDatos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Clientes" HorizontalAlignment="Left" Margin="48,10,0,0" VerticalAlignment="Top" FontSize="22"/>
        <ListBox Name="listaClientes" Height="NaN" Margin="10,61,628,116" Width="NaN" MouseDoubleClick="listaClientes_MouseDoubleClick"/>
        <Label Content="Mostrar todo" HorizontalAlignment="Left" Margin="515,0,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.529,-0.185"/>
